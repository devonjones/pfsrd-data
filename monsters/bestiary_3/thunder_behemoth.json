        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Mighty Roar",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Every 1d4 rounds as a standard action, a thunder behemoth can issue a mighty roar in a 60-foot cone that duplicates the effect of an empowered <i>greater shout </i>(Fortitude DC 30 for half damage). This is a sonic effect. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Rock Spitting",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A thunder behemoth can spit rocks from the essentially inexhaustible store in its gizzard. It can spit up to four rocks as a standard action, with a range increment of 60 feet. A creature that is critically hit by one of these rocks must make a DC 38 Fortitude save to resist being stunned for 1 round. The save DC is Strength-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Swallow Whole",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A thunder behemoth has five stomachs and can shunt a swallowed victim into any one of them (usually choosing an empty stomach)."
            }

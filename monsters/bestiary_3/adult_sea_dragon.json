        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Change Shape",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A young or older sea dragon can assume any humanoid form three times per day as if using <i>polymorph</i>."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Sea Strider",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Three times per day as a standard action, an old or older sea dragon can move from one body of water to another as if using the <i>teleport </i>spell (self only)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Tidal Wave",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once per day, a great wyrm sea dragon can create a tidal wave. This ability is the same as the bronze dragon's ability of the same name (<i>Bestiary </i>104)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Torrent Breath",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Instead of a cone of super-heated steam, a very young or older sea dragon can breathe a line of pressurized water twice the length of the sea dragon's cone breath weapon. This line deals bludgeoning damage."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Unfettered Swimmer",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A juvenile sea dragon gains a 10-foot bonus to its swim speed. The sea dragon's swim speed continues to increase by an additional 10 feet every two age categories. Furthermore, while swimming, the sea dragon is treated as if under the effects of the spell <i>freedom of movement</i>. <br/><br/><table class=\"inner\"> <tr> <td><b>Age Category</b></td> <td> <b>Special Abilities</b> </td> <td> <b>Caster Level</b> </td> </tr> <tr> <td>Wyrmling</td> <td>Immunity to electricity, water breathing</td> <td>\u2014</td> </tr> <tr> <td>Very young</td> <td>Torrent breath</td> <td>\u2014</td> </tr> <tr> <td>Young</td> <td>Change shape, <i>create water</i> </td> <td>1st</td> </tr> <tr> <td>Juvenile</td> <td>Frightful presence, <i>hydraulic push</i>, unfettered swimmer</td> <td>3rd</td> </tr> <tr> <td>Young adult</td> <td>DR 5/magic, spell resistance</td> <td>5th</td> </tr> <tr> <td>Adult</td> <td><i>Call lightning</i></td> <td>7th</td> </tr> <tr> <td>Mature adult</td> <td>DR 10/magic</td> <td>9th</td> </tr> <tr> <td>Old</td> <td> <i>Control water</i>, sea strider</td> <td>11th</td> </tr> <tr> <td>Very old</td> <td>DR 15/magic</td> <td>13th</td> </tr> <tr> <td>Ancient</td> <td><i>Water walk</i></td> <td>15th</td> </tr> <tr> <td>Wyrm</td> <td>DR 20/magic</td> <td>17th</td> </tr> <tr> <td>Great wyrm</td> <td>Tidal wave, <i>vortex</i> </td> <td>19th</td> </tr> </table>"
            }
        ]

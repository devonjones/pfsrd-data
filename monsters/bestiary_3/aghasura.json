        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Attraction Aura",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "An aghasura exudes a 50-foot aura whenever it remains motionless for at least 1 round. All nonevil creatures that enter this area must make a DC 21 Will save to avoid being compelled to move toward the aghasura\u2019s location. If the aghasura moves, the effect ends for all currently affected creatures. This is a mind-affecting compulsion. The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Dual Wielder",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "An aghasura does not take a penalty on attack or damage rolls when attacking with two weapons."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Infused Weapons",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Weapons an aghasura wields are considered to be magic for the purposes of overcoming damage reduction. In addition, such weapons gain the ability to deliver the aghasura\u2019s poison on a successful attack."
            },
            {

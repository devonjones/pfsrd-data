        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Natural Jouster",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A svathurim can wield a lance onehanded as if it were mounted, and it deals double damage with a lance while charging."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Skyrunner",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "When charging, running, or taking a double move, a svathurim can stride across open air as if it were using <i>air walk</i>. This movement is very taxing; a svathurim must succeed at a DC 14 Constitution check at the end of each round it uses this ability or become fatigued for 1 minute. This DC increases by 2 for each round after the first. Returning to the ground resets the DC to 14, but doesn\u2019t negate any ongoing fatigue or exhaustion. A svathurim cannot trample when using this ability."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Thunderous Trample",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Any creature damaged by a svathurim\u2019s trample attack must succeed at a DC 22 Fortitude save or be deafened for 1 minute. The save DC is Constitution-based."
            }
        ]

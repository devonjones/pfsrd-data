        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Change Size",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Latten Mechanism can change its size to Huge, Large, or Medium as a standard action, as if using <i>enlarge person</i> or <i>reduce person</i>. This change lasts until it changes size again or is killed."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Create Soldiers",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Once per day, Latten Mechanism can create up to four clockwork soldiers (<i>Pathfinder RPG Bestiary 3</i> 57). These soldiers serve it for 1 hour, after which they break down into their component parts."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Double Damage Against Objects",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "If Latten Mechanism makes a full attack against an object or structure, it deals double damage."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Integrated Masterwork Tools",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Latten Mechanism can extend additional limbs from its body that end in masterwork tools suitable for any Craft skill it has ranks in."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Lyre of Building",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Latten Mechanism has all of the abilities of a <i>lyre of building</i> (<i>Pathfinder RPG Core Rulebook</i> 522), with the same limitations as that item."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Master of Crafting",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Latten Mechanism can spend 10 minutes reconfiguring itself to allocate its 18 ranks in the Craft skill to any specific Craft skills in any combination. For example, it can allocate 9 ranks in Craft (armor) and 9 ranks in Craft (clockwork). All Craft skills are class skills for Latten Mechanism."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Bloodsense",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A ghorazagh notices living creatures within 60 feet just as if it possessed the blindsight ability."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Bloodspray",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once every 1d4 rounds, a ghorazagh can unleash a 20-foot cone of blood and eldritch enzymes. Any living creature struck by a ghorazagh\u2019s bloodspray must make a DC 25 Fortitude save or be affected as by the spell <i>slow</i>. A slowed creature struck by a ghorazagh\u2019s bloodspray a second time must make an additional save or be paralyzed. These effects last for 2d6 rounds. A ghorazagh can also consciously alter its enzymes, producing a spray that removes all effects of this ability. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Chemical Communication",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Ghorazaghs can communicate with other ghorazaghs within 60 feet via pheromone transmission. In a ghorazagh hive, this range extends to cover the entire hive. This is a silent and instantaneous mode of communication that only ghorazaghs can understand."
            }

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Gaze",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Death (if 6 HD or less) or 6d6 damage and panicked for 2d4 rounds (7 HD or more), range 30 feet, Will DC 25 negates the death or panicked effect. This gaze is a mind-affecting fear effect that causes its targets to perceive Basileus as the most terrifying thing that it can imagine. The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Terror Shape",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "While using his gaze ability, Basileus manifests one to five monstrous limbs that can make slam attacks."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Veil of Forms",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "All creatures see Basileus as a powerful and attractive member of their own race. While using this ability, Basileus\u2019s gaze ability is suppressed. He can activate or suppress this ability as a free action."
            }

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Crash Through",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A megaprimatus\u2019s movement is not impeded by undergrowth, trees, rubble, and similar difficult terrain; by Medium or smaller creatures; or by allies of any size. A megaprimatus can attempt a combat maneuver to overrun a Gargantuan or smaller opponent as a swift action that does not provoke attacks of opportunity."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Mangling Rend",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "When a megaprimatus rends a creature or successfully uses its Snatch feat to grapple a creature, the target also takes 1d6 points of bleed damage and reduces its movement by half for 1 minute. The ape can forgo this effect to disable one of the target\u2019s natural weapons for 1 minute, causing attacks with that weapon to take a -4 penalty on attack rolls and to deal half damage."
            }

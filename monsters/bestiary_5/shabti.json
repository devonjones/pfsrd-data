        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Immortal",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Shabti do not age naturally and can\u2019t die of old age. While some might come into being at age categories other than adulthood, they never leave their original age categories. Spells and effects that cause aging affect a shabti as normal."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Immune to Undeath",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Shabti can\u2019t become undead. Spells and abilities that would transform a shabti into an undead creature have no effect."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Past-Life Knowledge",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Shabti remember bits of their past lives. As a result, they treat all Knowledge skills as class skills."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Resist Level Drain",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A shabti takes no penalties from energy drain effects, though it can still be killed if it accrues more negative levels than it has Hit Dice. After 24 hours, any negative levels a shabti takes are automatically removed without the need for additional saving throws."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Shattered Soul",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Shabti who are killed are exceptionally difficult to return to life. Anyone who attempts to return a shabti to life using <i>raise dead, resurrection</i>, or a similar spell must succeed at a caster level check whose DC is equal to 10 + the shabti\u2019s Hit Dice. If it fails, the spell fails and the caster can\u2019t return the shabti to life for the next 24 hours (though the caster can try again after this period)."
            }
        ]

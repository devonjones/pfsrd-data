        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Deep Dweller",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Deep ones are immune to damage from water pressure; their bodies are capable of instantly adjusting to different water depths or even the surface with ease."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Devastating Strike",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "An elder deep one ignores the first 10 points of hardness when it damages an object with its claws. A creature struck with a critical hit from an elder deep one\u2019s claw must succeed at a DC 30 Fortitude save or be stunned for 1 round. The save DC is Strength-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Immortal",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A deep one does not age. Barring death from violence, disease, or misadventure, a deep one can live forever. Deep ones are immune to effects that cause magical aging. A deep one does not age. Barring death from violence, disease, or misadventure, a deep one can live forever. Deep ones are immune to effects that cause magical aging."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Item Use",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A deep one can activate spell-trigger items like staves and wands as if it were a spellcaster of the appropriate class."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Mind Reflection",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Any mind-affecting effect that fails to affect an elder deep one is reflected back on the source, affecting the original caster as if by <i>spell turning</i>, treating the elder deep one as the controller and source of the spell."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Staggering Presence",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "This ability functions as frightful presence, except that a creature that fails its save is also staggered as long as it remains in the area of effect, and for an additional 1d6 rounds after leaving that area. This is a mind-affecting fear effect."
            }
        ],
        "other_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "other_ability",
                "name": "Deific",
                "text": "An elder deep one can grant divine spells to its worshipers. Granting spells does not require any specific action on the elder deep one\u2019s behalf. Elder deep ones grant access to the domains of Chaos, Evil, Madness, and Water. Their symbols vary, but their favored weapon is the claw."
            }
        ]

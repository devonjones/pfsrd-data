        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Choking Suffocation",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "When a yurei uses her <i>suffocation</i> spell-like ability, she causes something disgusting (such as a tangled clump of wet hair or a foul-tasting clot of rancid swamp mud) to manifest in the target\u2019s throat. As soon as the victim succeeds at its saving throw against choking suffocation or the ability\u2019s duration ends after 3 rounds, the victim coughs up the disgusting foreign matter in a horrific display and must succeed at a DC 23 Fortitude save or become nauseated for 1d6 rounds. The save DC is Charisma-based. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Face of Death",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a full-round action, a yurei can expose her face to a single adjacent creature. The target must succeed at a DC 23 Will save or be stunned for 1d6 rounds. If the target is stunned by this effect, it must then succeed at a DC 23 Fortitude save or immediately die of fright. A target that succeeds at the initial save is immune to that particular yurei\u2019s face of death ability for 24 hours. This is a mind-affecting fear effect, and the secondary effect is a death effect. The save DCs are Charisma-based. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Flicker",
                "ability_type": "Spell-Like",
                "ability_type_abbrev": "Sp",
                "text": "A yurei gains a +4 dodge bonus to her Armor Class on any round she moves at least 5 feet. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Painful Grasp",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A yurei\u2019s touch inflicts horrific pain, dealing 12d6 points of untyped damage and sickening the target for 1d6 rounds. A creature can avoid the sickened effect with a successful DC 23 Fortitude save, but this does not reduce the damage. The save DC is Charisma-based"
            }

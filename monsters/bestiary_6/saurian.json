        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Dinosaur Empathy",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "This ability functions as a druid\u2019s wild empathy ability, save that it works only on dinosaurs. A saurian gains a bonus on this check equal to its Hit Dice + its Charisma modifier (+26 for most saurians). "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Roar",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action once every 1d4 rounds, a saurian can unleash a terrible roar, affecting all creatures in a 60-foot cone. Creatures in the area must succeed at a DC 25 Will save or be stunned for 1d4 rounds. A creature that successfully saves is instead staggered for 1d4 rounds. This ability is a sonic mind-affecting effect. The save DC is Charisma-based."
            }

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Ascetic Master",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A daitengu can use unarmed strikes, flurry of blows, and Stunning Fist as a 12th-level monk. He adds his Wisdom bonus to his AC and CMD, and gains an additional +1 bonus to AC and CMD for every four Hit Dice he has. He can treat unarmed attacks as cold iron, magic, silver, or any alignment for overcoming damage reduction. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Daitengu\u2019s Blessing",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once per week as a standard action, a daitengu can bestow its mastery of greater fighting arts upon a creature it touches. The daitengu selects any combat feat that it knows and that its target meets the prerequisites for. Upon being touched, the target gains that feat as a bonus feat for a number of days equal to the daitengu\u2019s Hit Dice. A daitengu with 15 or more Hit Dice can grant two feats with this ability, while a daitengu with 20 or more Hit Dice can grant three."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Devastating Bite",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A hungerer\u2019s bite deals \u00d74 damage on a successful critical hit. If this damage is enough to reduce a victim to negative hit points, the victim must succeed at a DC 30 Fortitude save to avoid being decapitated, bitten in half, or otherwise instantly killed by the horrific wound. The save DC is Strength-based. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Vile Spew",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Whenever a hungerer takes damage, the resulting wound spews a great gout of vile blood and acid. Any creature adjacent to a hungerer when it is wounded takes 2d6 points of acid damage (Reflex DC 25 negates). The save DC is Constitution-based. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Wisdom Drain",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A hungerer drains 2 points of Wisdom each time it strikes a foe with its bite or claw attacks. Unlike with other kinds of ability drain attacks, a hungerer does not heal any damage when it uses its Wisdom drain."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Absorbent Hide",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A flood troll\u2019s flesh is highly resilient to the stresses of long dry periods. A flood troll who has gone without touching flowing water for at least 24 hours gains a +2 natural armor bonus to AC. A flood troll who has touched water within the last 24 hours gains cold resistance 5 instead."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Oversized Limbs",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A flood troll\u2019s hands are larger than its body would suggest. Flood trolls can wield Large weapons without penalty."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Rain Regeneration",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A flood troll\u2019s regeneration functions as long as the flood troll is touching flowing water or precipitation. Even a slight drizzle is enough to activate the flood troll\u2019s regeneration. However, any acid or fire damage dealt to the flood troll suspends its next round of regeneration."
            }

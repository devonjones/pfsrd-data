        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Aura of Blinding Light",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A shining child can radiate a 50-foot-radius aura of blinding light as a free action. This creates a condition of illumination equal to daylight and imposes a \u20134 circumstance penalty on Hide checks within the aura. Creatures within the affected area must succeed on a DC 25 Fortitude save or be blinded. A creature who successfully saves cannot be affected again by the same shining child\u2019s aura for 24 hours. Other shining children are immune to the aura. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Burning Touch",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A shining child corrupts the positive energy within a living creature into an unnatural, disintegrating, burning light. By making a successful touch attack, it can cause a living foe to burst into this searing radiance. The light of a shining child deals 2d12 points of fire damage when it first hits and 2d6 points of fire damage for the next 5 rounds. The burning light can be \u201cextinguished\u201d by immersing it in darkness, such as that created by darkness or similar spell or simply by entering an area devoid of any other source of light. This attack does not affect constructs, undead, or similar non-living creatures."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Radiant Armor",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "The light that surrounds a shining child grants a deflection bonus to its AC equal to its Charisma bonus. The bonus can be reduced to +2 for 1 round by casting <i>deeper darkness</i> on the shining child (ordinary darkness has no effect)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Searing Ray",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A shining child\u2019s primary attack is a ray of searing positive energy. This attack has a range of 120 feet (no range increment). This ray deals double damage to undead."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Bury Alive",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action, Gravedragger can telekinetically pull a target within 100 feet into a grave (or a similar physical hole in the ground that is an appropriate size for burying the target) and bury it. Gravedragger must be adjacent to the grave he intends to drag his target into. Treat this as a special drag combat maneuver. The target takes 4d6 points of damage (Reflex DC 22 half) and is buried alive (see Cave-Ins and Collapses on page 415 of the <i>Pathfinder RPG Core Rulebook</i>). The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Long Arm of the Reaper",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Gravedragger can throw his heavy pick up to 100 feet away as a ranged attack with no range increment. The weapon automatically returns just before the herald\u2019s next turn, as if it had the <i>returning</i> weapon quality."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Unearthly Luck",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Gravedragger adds his Charisma bonus as a luck bonus on all his saving throws and to his Armor Class."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Unluck Aura",

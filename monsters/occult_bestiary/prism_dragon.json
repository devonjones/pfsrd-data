        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Breath Weapon",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once every 1d4 rounds as a standard action, a prism dragon can fire a beam of scintillating light in a 100-foot line. Creatures caught in this line take 20d6 points of fire damage and are blinded for 2d6 rounds. A successful DC 27 Reflex save halves the damage and negates the blindness. As a full-round action, a prism dragon can instead fire a prismatic beam; every creature within the line of effect who fails its Reflex save is also affected as if targeted by a <i>prismatic spray</i> spell. Using this ability expends the prismatic dragon\u2019s daily use of its <i>prismatic spray</i> spell-like ability."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Dazzling Presence",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "In areas of dim or brighter light, a prism dragon\u2019s body catches and refracts light into brilliant patterns and colors within 100 feet around its body. This effect renders illusions more potent, increasing the save DC of all illusion spells cast within the area of effect by 2. In addition, as a swift action, the prism dragon may move any <i>dancing lights</i>, <i>daylight</i>, <i>light</i>, or visual illusion spells within the area of its dazzling presence to any other point within 100 feet."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Razor Sharp",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "All of a prism dragon\u2019s natural attacks deal slashing damage."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Ray Reflection",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A prism dragon\u2019s scales reflect ray spells back on the ray\u2019s source if the ray fails to overcome the dragon\u2019s spell resistance."
            }
        ]

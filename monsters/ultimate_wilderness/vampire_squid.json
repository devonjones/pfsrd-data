            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Photophores",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Once per day as a standard action while underwater, the vampire squid can release a 15-foot cone of disorienting bioluminescent mucus from its photophores, illuminating the area with dim light. A creature within this shimmering cloud of blue light must succeed at a DC 11 Fortitude save or be dazzled for as long as it remains in the cloud and for 1 round thereafter. The cloud persists for 1d4+1 rounds. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Pressure Adaptation",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A vampire squid takes no pressure damage from changes in water depth."
            },

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Death Roll",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Upon making a successful grapple check against a foe of its size or smaller, a hetkoshu deals bite damage to the target and knocks it prone. This does not break the hetkoshu\u2019s grapple."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Hold Breath",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A hetkoshu can hold its breath for 4 rounds per point of Constitution before having to make Constitution checks to continue holding its breath (<i>Pathfinder RPG Core Rulebook </i>445)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Savage Rush",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "For 1 round per minute, a hetkoshu may sprint with devastating speed, increasing its land speed to 40 feet and allowing it to treat nonmagical difficult terrain as if it were normal terrain. If it charges during this round, it may attack twice with its bite as its attack action, using the same attack modifier for both attacks."
            }

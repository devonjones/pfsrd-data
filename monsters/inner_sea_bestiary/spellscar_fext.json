        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Deadly Slam",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A Spellscar fext threatens a critical hit with its slam attack on rolls of 18\u201320."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Dispelling Critical",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Whenever a Spellscar fext successfully scores a critical hit with its slam attack, the creature struck must succeed at a DC 19 Will save or be affected as though by the targeted dispel version of a <i>dispel magic </i>spell (caster level 10th). The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Ravage Magic",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Any targeted spell or spell-like ability that fails to penetrate a Spellscar fext\u2019s spell resistance is absorbed by the fext and warped into a form of primal magic. A Spellscar fext can twist only a number of spell levels per round equal to its Charisma modifier (4 for most Spellscar fexts); any spells in excess of this limit automatically bypass a Spellscar fext\u2019s spell resistance and don\u2019t trigger this ability. Roll on the following table to determine the effect of a spell that has been affected by a Spellscar fext\u2019s ravage magic ability. Alternatively, a Spellscar mutant may use any of the sample primal magic events found on page 13 of <i>Pathfinder Campaign Setting: Inner Sea Magic</i> in place of the following effects, replacing the CR of such effects with the CR of the Spellscar fext.<br/><br/><table class=\"inner\"> <tr> <td><b>d%</b></td> <td><b>Effect</b></td> </tr> <tr> <td>01\u201340</td> <td>The spell has no effect.</td> </tr> <tr> <td>41\u201370</td> <td>The Spellscar fext emits a burst of negative energy, dealing a number of points of negative energy damage equal to 1d6 \u00d7 the spell level of the triggering spell to all creatures in a 30-footradius burst.</td> </tr> <tr> <td>71\u201390</td> <td>The Spellscar fext instantly switches places with the spellcaster that targeted the fext with the triggering spell as though by <i>dimension door</i>.</td> </tr> <tr> <td>91\u2013100</td> <td>The spell is immediately turned back on its caster via <i>spell turning</i>.</td> </tr> </table>"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Vulnerable to Glass",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A Spellscar fext\u2019s hide is particularly vulnerable to the penetrations of glass and glass-based weapons. Spellscar fexts take 150% as much damage as normal from glass-headed piercing or slashing weapons."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Razmiri Aversion",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The Razmiri conditioning received in life is difficult for an apostasy wraith to overcome. If confronted by a Razmiri priest or anyone successfully disguised in that garb, the apostasy wraith must make a Will save. The DC of this save is equal to 10 + 1/2 the Hit Dice + the Charisma modifier of the highest-level Razmiri priest present. The apostasy wraith needs to make this saving throw only once per encounter, regardless of the number of Razmiri priests present. If the saving throw fails, the apostasy wraith is forced to flee as if affected by the Turn Undead feat. If the save is successful, it overcomes its aversion and gains a +2 bonus on attack rolls and deals double damage against Razmiri priests (or those disguised as such) for the duration of the encounter."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Rend Faith",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "On a successful incorporeal touch attack against a foe with divine spellcasting abilities, the ability to channel energy, or other divinely granted special abilities, the apostasy wraith\u2019s inherent spite and contempt toward all things religious disrupts the target\u2019s connection with his deity. The victim must make a successful DC 16 Will save or be unable to use any such ability for 1 round. The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Sense Apostate",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "An apostasy wraith can sense the presence and direction of Razmiri priests as if using the <i>locate creature </i>spell (CL 20th). This ability cannot be dispelled."
            }
        ]

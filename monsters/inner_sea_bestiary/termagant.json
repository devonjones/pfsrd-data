        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Poison",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Anytime a creature is grappled by a termagant\u2019s tentacles or is affected by its rupture or shared rupture ability, it is exposed to the termagant\u2019s flux infusion. Flux infusion functions as a poison, but with unpredictable effects. Those who fail their saving throws take 1d4 points of ability drain. The ability score drained is randomly determined every time the flux infusion affects the creature (roll 1d6: 1\u20132 Constitution, 3\u20134 Dexterity, 5\u20136 Strength). The save DC is Constitution-based.<br/><br/><i>Flux Infusion</i>: Injury; <i>save </i>Fort DC 28; <i>frequency </i>1/round for 10 rounds; <i>effect </i>1d4 Con, Dex, or Str; <i>cure </i>2 consecutive saves."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Rupture",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "When killed, a termagant explodes in a blast of its flux infusion poison. All living creatures within 15 feet must succeed at a DC 28 Fortitude saving throw or be poisoned. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Shared Rupture",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Any creature killed while poisoned by a termagant explodes. All living creatures within 10 feet of the creature must succeed at a DC 23 Fortitude save or be poisoned. The save DC is based on the termagant\u2019s Constitution with a \u20135 penalty."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Unnerving Gaze",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A creature that succumbs to a termagant\u2019s unnerving gaze becomes nauseated for 1d4 rounds as its mind attempts to comprehend the horrors it has witnessed."
            }
        ]

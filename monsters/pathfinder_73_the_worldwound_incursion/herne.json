        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Defy the Gods",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Hernes gain a +2 bonus on saving throws against divine spells and the spell-like and supernatural abilities of divine spellcasters and outsiders summoned or called by a divine spellcaster."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Favored Terrain",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A herne gains a +2 bonus on initiative checks and Knowledge (geography), Perception, Stealth, and Survival skill checks when it is in forest terrain. A herne traveling through forest terrain normally leaves no trail and cannot be tracked (though he can leave a trail if he so chooses)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Martial Training",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A herne is proficient with all simple and martial weapons and with light armor, medium armor, and shields (except tower shields)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Swift Tracker",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A herne can move at its normal speed while using Survival to follow tracks without taking the normal \u20135 penalty. A herne takes only a \u201310 penalty (instead of the normal \u201320) when moving up to twice its normal speed while tracking."
            }

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Hibernal Breath",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once per day, a hoary muntjac can exhale a 15-foot cone of icy mist as a standard action. Characters caught in the cloud take 2d4 points of cold damage and are fatigued. A DC 14 Fortitude save halves the damage and negates the fatigue. Creatures that don\u2019t breathe and creatures that don\u2019t sleep (including elves) are immune to this ability, as are other hoary muntjac. The save DC is Constitution-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Shoveler",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A hoary muntjac can move over snow or ice at its normal speed and heavy snow at half-speed (instead of one-quarter)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Track Heat",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A hoary muntjac gains a +4 racial bonus on Spot and Survival checks in cold weather (below 40\u00ba). This bonus increases to +8 in severe cold (below 0\u00ba)."

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Bloody Rose",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "At will as a free action, the herald can create a thorny red rose. She may use this rose as a <i>+1 anarchic dart </i>as if she had the Quick Draw feat. The rose loses all its powers 1 round after it leaves the herald\u2019s hand."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Favored Enemy",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The herald has the favored enemy ability of a 17th-level ranger."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Imbue with Power",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "The herald can imbue an ally with a portion of her power. This ability functions like<i> imbue with spell ability</i>, except she may transfer uses of the following spell-like abilities as if they were cleric spells: <i>cure moderate wounds</i>, <i>magic weapon</i>, <i>peasant armaments</i>, <i>protection from arrows</i>, <i>shield other</i>, and <i>status</i>. Using this ability reduces the number of times per day she can use that spell-like ability until she dismisses the transfer or the recipient expends it (for example, if she imbues a target with <i>cure moderate wounds</i>, thereafter she can only use that spell-like ability twice per day)."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Martyr\u2019s Blood",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "By marking an ally with her blood, the herald can transfer part of her fast healing ability to that ally. The herald\u2019s fast healing decreases by 1 (minimum 0), and the ally gains fast healing 1 for 1 hour. This ability has no effect if the target already has fast healing."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Rebellious Aura",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "The herald\u2019s aura grants allies within 60 feet the effects of <i>good hope </i>and a paladin\u2019s aura of courage. The effects of this ability are included in the herald\u2019s stat block."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Tactician",

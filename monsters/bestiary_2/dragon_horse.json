        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Breath Weapons",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action, a dragon horse can breathe out a 30-foot cone of mist. This mist either deals 10d6 points of cold damage (DC 20 Reflex half), creates a region of fog in the area that lasts for 1 minute (similar to that created by a <i>fog cloud</i> spell), or creates a blast of severe wind (see the wind effects table) in the area. The dragon horse may use this breath weapon once every 1d4 rounds. The save DC is Constitution-based. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Flying Charge",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A dragon horse gains a +4 bonus on damage rolls if it charges while flying. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Know Alignment",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Dragon horses automatically know the alignment of any creature they can see. "
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Shift Planes",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A dragon horse can enter the Ethereal Plane, Astral Plane, Plane of Air, or Material Plane once per day as a standard action. This functions as <i>plane shift</i>, but the dragon horse can only bring up to two other willing creatures with it, and only if they are on its back."
            }

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Alignment Variation",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Soulbound dolls are at least partially neutral in alignment, although they can also be chaotic, evil, good, or lawful. They have an alignment-dependent spell-like ability usable once per day as listed below. <ul> <li> <i>Chaotic Neutral</i>: <i>rage</i> </li> <li> <i>Lawful Neutral</i>: <i>suggestion </i>(DC 12)</li> <li> <i>Neutral</i>: <i>deep slumber </i>(DC 12)</li> <li> <i>Neutral Evil</i>: <i>inflict serious wounds </i>(DC 12)</li> <li> <i>Neutral Good</i>: <i>heroism</i> </li> </ul>"
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Susceptible to Mind-Affecting Effects",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The weakened conviction of a soulbound doll\u2019s soul makes it susceptible to mind-affecting effects, despite the fact that it is a construct."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Soul Focus",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "The soul bound to the doll lives within a focus integrated into the doll or its apparel, typically one of the doll\u2019s eyes or a gem embedded into its neck or chest. As long as this soul focus remains intact, it can be used to animate another doll, using the same cost as creating a new construct. Once bound into the soul focus, the soul continues to learn, and so if later it is put into a new doll body, the soul retains its personality and memories from its previous body or bodies. A soul focus has hardness 8, 12 hit points, and a break DC of 20."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Water Dependency",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "An oceanid can survive out of the water for 1 hour per point of Constitution. After this limit, she takes 1 point of Constitution damage each hour until immersed in salt water."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Water Magic",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "An oceanid can use her spell-like abilities only when she is in the ocean or within 1 mile of the ocean."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Water Telekinesis",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "When immersed in water, an oceanid can manipulate water to affect creatures and objects within 500 feet that are in contact with the same body of water. This functions as the combat maneuver form of the <i>telekinesis</i> spell (caster level 9th, combat maneuver bonus +14), including the need to maintain concentration. This ability also allows her to create a small waterspout as a standard action once per round, striking an opponent within 100 feet with a blast of water as a ranged attack that deals 7d6 points of bludgeoning damage."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Waveglide",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "An oceanid can create waves and currents to double or halve the speed of creatures or objects traveling on the surface of the water, affecting up to 100 contiguous 5-foot squares in a shapeable area (typically enough for one warship or two small sailing ships). This ability has a range of 1,000 feet, requires line of effect to some part of the area, and lasts as long as the oceanid concentrates. An unwilling target can ignore the effect for 1 round by succeeding at a DC 19 Will saving throw. The save DC is Charisma-based."
            }
        ]

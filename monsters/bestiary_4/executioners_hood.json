        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Engulfing Drop",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Though it is a Tiny monster, the hood can drop onto the head of a Medium or smaller creature and make a slam attack as a standard action. If the hood\u2019s attack succeeds, it can immediately attempt a grapple check against the target, and if successful, the executioner\u2019s hood can constrict."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Strangle",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A grappling executioner\u2019s hood entirely covers its opponent\u2019s head with an airtight grip. A creature that is grappled by the hood cannot speak or cast spells with verbal components and must hold its breath (see Suffocation, <i>Pathfinder RPG Core Rulebook</i> 445), unless it doesn\u2019t speak or breathe through its head. Any attacks against the hood deal half damage to the hood and the other half to the creature that it\u2019s strangling."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Susceptible to Alcohol",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Strong alcohol harms the hood. Every quart poured on it deals 1 point of damage. Four quarts of alcohol incapacitates it and forces it to release a grappled target."
            }

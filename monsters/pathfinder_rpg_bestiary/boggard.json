        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Hold Breath",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A boggard can hold its breath for a number of rounds equal to four times its Constitution score before it risks drowning or suffocating."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Sticky Tongue",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A creature hit by a boggard\u2019s tongue attack cannot move more than 10 feet away from the boggard and takes a \u20132 penalty to AC as long as the tongue is attached (this penalty does not stack if multiple tongues are attached). The tongue can be removed by making an opposed Strength check as a standard action or by dealing 2 points of slashing damage to the tongue (AC 11, damage does not deplete the boggard\u2019s actual hit points). The boggard cannot move more than 10 feet away from the target, but the boggard can release its tongue as a free action. Unlike a giant frog, a boggard cannot pull targets toward it with its tongue."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Swamp Stride",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A boggard can move through any sort of natural difficult terrain at its normal speed while within a swamp. Magically altered terrain affects a boggard normally."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Terrifying Croak",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "Once per hour, a boggard can, as a standard action, emit a loud and horrifying croak. Any non-boggard creature within 30 feet of the boggard must make a DC 13 Will save or become shaken for 1d4 rounds. Creatures that succeed at this save cannot be affected again by the same boggard\u2019s croak for 24 hours. Creatures that are already shaken become frightened for 1d4 rounds instead. The save DC is Charisma-based and includes a +2 racial bonus."
            }
        ]

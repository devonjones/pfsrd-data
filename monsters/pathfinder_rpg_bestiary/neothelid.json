        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Mind Thrust",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action up to three times a day, a neothelid can deliver a massive blast of mental energy at any one target within 60 feet, inflicting 15d10 points of damage. A successful DC 25 Will save negates the effect. This effect can only harm creatures with Intelligence scores. This is a mind-affecting effect. The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Psychic Crush",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action up to three times a day, a neothelid can attempt to crush the mind of a single creature within 60 feet. The target must make a DC 25 Will save or collapse, becoming unconscious and dying at \u20131 hit points. If the target succeeds on the save, it takes 6d6 points of damage and is sickened for 1 round. This is a mind-affecting effect. The save DC is Charisma-based."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Trace Teleport",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A neothelid telepathically and reflexively learns the mental coordinates of the destination, of all creatures that teleport within 60 feet of it, gaining an awareness of the location equivalent to \u201cseen casually.\u201d This knowledge fades and is lost after 1 minute. This power does not grant any environmental information about the conditions of the destination."
            }
        ]

        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Countersong",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A choral can attempt a Perform (sing) check to counter magic effects that depend on sound. This ability functions as the bard ability of the same name."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Harmonize",
                "ability_type": "Spell-Like",
                "ability_type_abbrev": "Sp",
                "text": "When chorals work together, they can use their complementary voices to create mystical harmonies. Two or more chorals within 60 feet of one another can use calm emotions or heroism as a spell-like ability, four or more chorals can use shout, and six or more chorals can use greater heroism or holy word. Only the choral that actually casts the spell-like ability in question must take a standard action to achieve this effect\u2014the other chorals need only take swift actions during the same round."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Piercing Hymn",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "As a standard action, a choral can launch a concentrated blast of sonic energy from its mouth as a ranged touch attack. This attack has a range of 90 feet with no range increment and deals 4d6 points of sonic damage. Any creature struck by a piercing hymn must succeed at a DC 17 Fortitude save or be deafened for 1d4 minutes. The save DC is Charisma-based."
            }
        ]

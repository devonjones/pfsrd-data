        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Breath Weapon",
                "ability_type": "Supernatural",
                "ability_type_abbrev": "Su",
                "text": "A khala can fire a jet of frigid liquid from one of its three mouths, dealing 16d6 points of cold damage (Reflex DC 27 half). Even if they succeed at the Reflex save, creatures caught in the line must succeed at a DC 27 Fortitude save or be encased in ice. A trapped creature must succeed at a DC 25 Strength check or DC 26 Escape Artist check as a full-round action to break free."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Disease",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "<i>Chillbane Fever:</i> Bite\u2014injury; <i>save</i> Fortitude DC 27; <i>onset</i> 1 day; <i>frequency</i> 1/day; <i>effect</i> 1d4 Con damage, sickened, and fatigued; <i>cure</i> 2 consecutive saves."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Tenacious Grapple",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "A khala does not gain the grappled condition if it grabs a foe with its tail, and it can maintain a grapple with its tail as a swift action."
            }

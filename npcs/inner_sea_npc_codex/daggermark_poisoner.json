        "special_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Combine Poison",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "Three times per day, the Daggermark poisoner can combine two different poisons without reducing their efficacy, and apply them to the same weapon, object, or trap. A creature exposed to the poisons must save against both."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Master Poisoner",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The Daggermark poisoner\u2019s levels in the Daggermark poisoner prestige class stack with her rogue levels when determining her bonus on Craft (alchemy) checks dealing with poison granted by this ability."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Quick Poisoning",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The Daggermark poisoner can poison a weapon as a move action. She can create poisons with the Craft (alchemy) skill in half the normal amount of time."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Toxic Manufactory",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "When creating poisons or antitoxins, the Daggermark poisoner can create a number of doses equal to her Intelligence modifier at one time (minimum 1). These additional doses do not increase the time required, but do increase the raw material cost accordingly. In addition, she uses the item\u2019s gp value as its sp value when determining progress made with her Craft (alchemy) checks."
            },
            {
                "type": "stat_block_section",
                "subtype": "special_ability",
                "name": "Trapster",
                "ability_type": "Extraordinary",
                "ability_type_abbrev": "Ex",
                "text": "The Daggermark poisoner adds her class level on Perception skill checks made to locate traps and on Craft and Disable Device checks regarding poisonous traps. She also adds a +1 bonus on attack rolls, save DCs, and Perception and Disable Device DCs for poisoned traps she creates."
            }
        ],
        "other_abilities": [
            {
                "type": "stat_block_section",
                "subtype": "other_ability",
                "name": "Toxic Apothecary",
                "text": "The Daggermark poisoner can use <i>detect poison</i> at will (range 5 feet) as a swift action. She gains a bonus equal to half her Daggermark poisoner level on Heal checks dealing with poison, and on a successful check she adds this bonus to the saving throw bonus she provides her patient against the treated poison."
            }
        ]
    },
